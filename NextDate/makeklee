CXX=clang++
CXXFLAGS1= -std=c++11 -I /home/klee/klee_src/include/ -emit-llvm -c -g
CXXFLAGS2= -std=c++11 -I /home/klee/klee_src/include/ -L /home/klee/klee_build/klee/lib/

all: nextdate_klee.bc
	klee --libc=uclibc nextdate_klee.bc && $(CXX) $(CXXFLAGS2) nextdate_klee.cpp -lkleeRuntest

nextdate_klee.bc:
	$(CXX) $(CXXFLAGS1) nextdate_klee.cpp

clean:
	rm -rf klee-* nextdate_klee.bc a.out
